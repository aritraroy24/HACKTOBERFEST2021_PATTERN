#include <iostream>

int main() {
  int n{};
  int col{};
  std::cout << "Enter the number of rows of the square matrix: ";
  std::cin >> n;
  for (int rows{1}; rows <= n; ++rows) {
    for (int col{1}; col <= n; ++col) {
      if (col <= rows) {
        std::cout << "* ";
        }
      }
    std::cout << std::endl;
  }
  return 0;
}
